@model List<Category>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-file-earmark-plus"></i> Create New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>Edit/Delete</th>

            </tr>

        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(x => x.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" roel="group">
                            <a asp-controller="CategoryController" action="Edit" class="btn btn-primary mx-2" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="CategoryController" action="Delete" class="btn btn-danger mx-0"><i class="bi bi-trash3-fill"></i></a>
                        </div>
                    </td>
                </tr>
            }
    </tbody>
</table>
</div>