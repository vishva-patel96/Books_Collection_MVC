@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
        </div>

        <div asp-validation-summary="All"></div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0 text-dark"></label>
            <input asp-for="Name" class="form-control border-3" />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0 text-dark"></label>
            <input asp-for="DisplayOrder" class="form-control border-3" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>